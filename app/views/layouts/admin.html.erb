<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS | <%=  @page_title || "Admin" %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>
    <div id="header">
      Simple CMS Admin
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
	<div class="notice">
	  <%= flash[:notice] %>
	</div>
      <% end %>
      <div id="content">
	<%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; 2014 Aaron Taylor</p>
    </div>
  </body>
</html>
